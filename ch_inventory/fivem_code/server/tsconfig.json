{
  "compilerOptions": {
    "outDir": "./",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": false,
    "lib": ["es6", "DOM"],
    "types": ["@citizenfx/server", "@types/node", "jest"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "../../shared/*"
      ],
      "@utils/*": [
        "./utils/*"
      ]
    }
  },
  "include": ["./**/*"],
  "exclude": ["**/node_modules", "**/__tests__/*"]
}
